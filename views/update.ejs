<%-include("partials/header") %>

<div id="newCampForm" class="container">
	
	<div class="well">
		<div class="text-center">
			<h3>
				Edit <%=campground.title %> campground
			</h3>
		</div>
		<form action="/campgrounds/<%=campground._id%>" method="post">
			<div class="form-group">
				<input class="form-control" name="edit[title]" type="text" value="<%= campground.title %>">
			</div>
			<div class="form-group">
				<input class="form-control" name="edit[image]" type="text" placeholder="image url">
			</div>
			<div class="form-group">
				<input class="form-control" name="edit[description]" type="text" value="<%= campground.description %>">
			</div>
			<button type="submit" class="btn btn-md btn-success">
				Done
			</button>
		</form>
	</div>
</div>

<%-include("partials/footer") %>